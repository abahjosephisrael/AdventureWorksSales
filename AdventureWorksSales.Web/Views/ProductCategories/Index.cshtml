@model IEnumerable<AdventureWorksSales.Web.Models.ProductCategory>

@{
    ViewBag.Title = "Product Categories";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Product Categories</h2>

<p>
    @Html.ActionLink("Create New Category", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rowguid)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedDate)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Rowguid)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ModifiedDate)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProductCategoryId }) |
            @Html.ActionLink("Details", "Details", new { id=item.ProductCategoryId }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.ProductCategoryId })
        </td>
    </tr>
}

</table>
